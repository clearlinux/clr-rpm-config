include: /usr/lib/rpm/rpmrc

#
# Our run-time ABI is current combination of haswell and silvermont.
# Which is -march=westmere -mrdrnd
#
# We tune for latest Intel processors (e.g. with gcc-4.9, -mtune=intel is haswell/silvermont)

Optflags: i386 %{__global_cflags}   -m32 -march=westmere -mtune=intel -mrdrnd -fasynchronous-unwind-tables -fno-omit-frame-pointer -fno-pic -mfpmath=sse
Optflags: i486 %{__global_cflags}   -m32 -march=westmere -mtune=intel -mrdrnd -fasynchronous-unwind-tables -fno-omit-frame-pointer -fno-pic -mfpmath=sse
Optflags: i586 %{__global_cflags}   -m32 -march=westmere -mtune=intel -mrdrnd -fasynchronous-unwind-tables -fno-omit-frame-pointer -fno-pic -mfpmath=sse
Optflags: i686 %{__global_cflags}   -m32 -march=westmere -mtune=intel -mrdrnd -fasynchronous-unwind-tables -fno-omit-frame-pointer -fno-pic -mfpmath=sse
optflags: x86_64 %{__global_cflags} -m64 -march=ivybridge -mtune=haswell -mrdrnd -fasynchronous-unwind-tables -fno-omit-frame-pointer -Wp,-D_REENTRANT 

macrofiles:     /usr/lib/rpm/macros:/usr/lib/rpm/%{_target}/macros:/usr/lib/rpm/clr/macros:/etc/rpm/macros.*:/etc/rpm/macros:/etc/rpm/%{_target}/macros:~/.rpmmacros
